
<style>
  .header {
    background-color: #0c0c0c;
    padding: 10px 20px;
    border-bottom: 1px solid #333;
    width: 100vw;
    color: #f5f5f5;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    height: 60px;
    min-width: 280px;
    cursor: default;
    align-items: center;
  }
  .header .title {
    font-size: 24px;
    font-weight: 600;
    padding: 5px 20px;
    cursor: pointer;
  }
  .username {
    color: #23ade5;
  }
  .user {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .user span {
    display: inline-block;
  }
  .log-out {
    padding-left: 30px;
    color: #444;
    font-size: 15px;
    cursor: pointer;
  }
  .log-out:hover {
    color: red;
  }
  
  
  @media only screen and (min-width: 1100px) {

    .user {
      font-size: 20px;
    }

  }
  
  @media only screen and (max-width: 500px) {
    .header {
      padding: 10px 20px;
    }
    .header .title {
      font-size: 14px;
      padding: 2px;
    }
    .user {
      flex-direction: column;
      justify-content: flex-start;
      font-size: 12px;
      wdith: 200px;
    }

    .log-out {
      font-size: 12px;
    }
  }
</style>
<script>
async function logout () {
  try {
    const res = await logoutApi()
    window.open('/signin', '_self')
  } catch (e) {
    alert('Retry later...')
  }
}
  
  function home () {
    window.open('/', '_self')
  }
</script>
<body>
  <div class="header">
    <div class="title" onclick="home()">
      Pittsburgh Forum
    </div>
    <div class="user">
      <div class="greeting">
        <span> Hello, </span>
        <span class="username">
          <%= user.username %>
        </span>
        <span> ! </span>
      </div>
      
      <div class="log-out" onclick="logout()">
        <span>Log Out  </span>
      </div>
    </div>
  </div>
</body>